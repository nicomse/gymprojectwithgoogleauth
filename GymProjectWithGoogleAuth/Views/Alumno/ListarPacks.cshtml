@model IEnumerable<GymProjectWithGoogleAuth.Models.Clases.Pack>

@{
    ViewBag.Title = "Listar Packs";
}

<h2>@ViewBag.Title</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="datatable" style="width:100%">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Sucursal</th>
                            <th>Cantidad de Créditos</th>
                            <th>Días de Vigencia</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdPack)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucursal.Barrio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantCreditos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiasVigencia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                <input type="button" class="btn btn-primary" value="Comprar" onclick="location.href='@Url.Action("ComprarPack", "Alumno", new { id = item.IdPack })'" />
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/datatable.js"></script>
}