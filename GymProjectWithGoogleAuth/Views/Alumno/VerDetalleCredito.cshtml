@model GymProjectWithGoogleAuth.Models.Clases.Credito

@{
    ViewBag.Title = "Detalle";
}

<h2>@ViewBag.Title</h2>
<hr />

<div>
    <dl class="dl-horizontal">

        <dt>ID</dt>
        <dd>@Html.DisplayFor(model => model.IdCredito)</dd>

        <dt>Sucursal</dt>
        <dd>@Html.DisplayFor(model => model.Pack.Sucursal.Barrio)</dd>

        <dt>Cantidad de Créditos</dt>
        <dd>@Html.DisplayFor(model => model.Cantidad)</dd>

        <dt>Fecha de Compra</dt>
        <dd>@Html.DisplayFor(model => model.FechaCompra)</dd>

        <dt>Fecha de Expiración</dt>
        <dd>@Html.DisplayFor(model => model.FechaExpiracion)</dd>
    </dl>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="datatable" style="width:100%">

                    <thead>
                        <tr>
                            <th>Actividad</th>
                            <th>Nombre Profesor</th>
                            <th>Apellido Profesor</th>
                            <th>Sucursal</th>
                            <th>Día</th>
                            <th>Estado</th>
                        </tr>
                    </thead>

                    @foreach (List<String> subList in ViewBag.detalleCreditos)
                    {
                        <tr>
                            @foreach (var item in subList)
                            {
                                <td>
                                    @item
                                </td>
                            }
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

<br/>

<div>
    <input type="button" class="btn btn-warning" value="Regresar" onclick="location.href='@Url.Action("ListarCreditos", "Alumno")'" />
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/datatable.js"></script>
}