@model IEnumerable<GymProjectWithGoogleAuth.Models.Clases.Horario>

@{
    ViewBag.Title = "Listar Horarios";
}

<h2>@ViewBag.Title</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="datatable" style="width:100%">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Actividad</th>
                            <th>Profesor</th>
                            <th>Sucursal</th>
                            <th>Hora de Inicio</th>
                            <th>Hora de Finalización</th>
                            <th>Día</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdHorario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Actividad.Nombre)
                            </td>
                            <td>
                                @item.Profesor.Nombre @item.Profesor.Apellido
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucursal.Barrio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoraInicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoraFin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dia)
                            </td>
                            <td>
                                <input type="button" class="btn btn-primary" value="Modificar" onclick="location.href='@Url.Action("ModificarHorario", "Administrador", new { id = item.IdHorario })'" />
                                <input type="button" class="btn btn-danger" value="Eliminar" onclick="if (confirm('¿Confirma la eliminación del horario seleccionado?')) location.href='@Url.Action("EliminarHorario", "Administrador", new { idHorario = item.IdHorario })'" />
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/datatable.js"></script>
}