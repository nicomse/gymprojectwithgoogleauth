<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homer's Gym</title>
    <link href="~/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Inicio", "Index", "Administrador", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Alumnos</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Alumno", "AgregarAlumno", "Administrador")</li>
                            <li>@Html.ActionLink("Listar Alumnos", "ListarAlumnos", "Administrador")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Profesores</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Profesor", "AgregarProfesor", "Administrador")</li>
                            <li>@Html.ActionLink("Listar Profesores", "ListarProfesores", "Administrador")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Sucursales</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Sucursal", "AgregarSucursal", "Administrador")</li>
                            <li>@Html.ActionLink("Listar Sucursales", "ListarSucursales", "Administrador")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Actividades</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Actividad", "AgregarActividad", "Administrador")</li>
                            <li>@Html.ActionLink("Listar Actividades", "ListarActividades", "Administrador")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Packs</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Pack", "AgregarPack", "Administrador")</li>
                            <li>@Html.ActionLink("Listar Packs", "ListarPacks", "Administrador")</li>
                            <li>@Html.ActionLink("Asignar Créditos", "AsignarCreditosAlumno", "Administrador")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Horarios</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Horario", "AgregarHorario", "Administrador")</li>
                            <li>@Html.ActionLink("Listar Horarios", "ListarHorarios", "Administrador")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2019 - Homer's Gym</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>