@model IEnumerable<GymProjectWithGoogleAuth.Models.Clases.Sucursal>

@{
    ViewBag.Title = "Listar Sucursales";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped" id="TablaListarSucursales">

    <thead>
        <tr>
            <th>Nro. Sucursal</th>
            <th>Barrio</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NroSucursal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Barrio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <input type="button" class="btn btn-primary" value="Modificar" onclick="location.href='@Url.Action("ModificarSucursal", "Sucursal", new { id = item.NroSucursal })'" />
                <input type="button" class="btn btn-danger btn-eliminar" value="Eliminar" onclick="CambiarEstado(@item.NroSucursal)" />
            </td>
        </tr>
    }

</table>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title" id="myModalLabel">¿Confirma?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="modal-btn-si">Sí</button>
                <button type="button" class="btn btn-primary" id="modal-btn-no">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        var confirmado = false;

        $(".btn-eliminar").on("click", function () {
            $("#mi-modal").modal('show');
        });

        var modalConfirm = function () {

            $("#modal-btn-si").on("click", function () {
                // callback(true);
                confirmado = true;
                $("#mi-modal").modal('hide');
                return confirmado;
            });

            $("#modal-btn-no").on("click", function () {
                // callback(false);
                confirmado = false;
                $("#mi-modal").modal('hide');
                return confirmado;
            });
        };

        function CambiarEstado(nroSucursal) {
            console.log(confirmado)
            modalConfirm(function () {
                if (confirmado) {
                    // ACCIONES SI EL USUARIO CONFIRMA
                    $.ajax({
                        url: '/Sucursal/EliminarSucursal',
                        data: { 'idSucursal': nroSucursal },
                        type: 'get',
                        success: function () {
                            window.location.reload()
                        },
                        fail: function (result) {
                            console.log(result)
                        }
                    })
                } else {
                    // ACCIONES SI EL USUARIO NO CONFIRMA
                    console.log('No confirma')
                }
            });
        }
    </script>
}