<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="datatable" style="width:97.5%">

                    <thead>
                        <tr>
                            <th>Alumno</th>
                            <th>Asistencia</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    @foreach (List<String> item in ViewBag.alumnos)
                    {
                        <tr>
                            <td>
                                @item[1] @item[2]
                            </td>
                            <td>
                                @item[3]
                            </td>
                            <td>
                                <label><input type="radio" name="asistencia_@item[0]" onclick="tomarAsistencia(@item[0], 'Presente')"> Presente</label>
                                <br />
                                <label><input type="radio" name="asistencia_@item[0]" onclick="tomarAsistencia(@item[0], 'Ausente')"> Ausente</label>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/datatable.js"></script>
}