@model IEnumerable<GymProjectWithGoogleAuth.Models.Clases.Alumno>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="datatable" style="width:97.5%">

                    <thead>
                        <tr>
                            <th>Alumno</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Nombre @item.Apellido
                            </td>
                            <td>
                                <label><input type="radio" name="asistencia" onclick="tomarAsistencia(@item.IdAlumno, 'Presente')"> Presente</label>
                                <br />
                                <label><input type="radio" name="asistencia" onclick="tomarAsistencia(@item.IdAlumno, 'Ausente')"> Ausente</label>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/datatable.js"></script>
}