@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";

    if (User.Identity.IsAuthenticated)
    {
        switch (controller)
        {
            case "Administrador":
                cLayout = "~/Views/Shared/_Layout_Administrador.cshtml";
                break;
            case "Alumno":
                cLayout = "~/Views/Shared/_Layout_Alumno.cshtml";
                break;
            case "Profesor":
                cLayout = "~/Views/Shared/_Layout_Profesor.cshtml";
                break;
            default:
                cLayout = "~/Views/Shared/_Layout.cshtml";
                break;
        }
    }
    else
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }

    Layout = cLayout;
}